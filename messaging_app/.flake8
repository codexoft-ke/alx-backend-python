[flake8]
max-line-length = 88
max-complexity = 10
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (in __init__.py files)
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    migrations,
    .pytest_cache,
    .coverage,
    htmlcov,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    settings.py:F405,F403
    */migrations/*:E501,F401
